# shutdown aliases
alias reboot='[ `pidof mpd` ] && mpc stop &>/dev/null && mpd --kill;echo "shutting down..."; sleep 2;sudo systemctl reboot'
alias shutdown='[ `pidof mpd` ] && mpc stop &>/dev/null && mpd --kill;echo "rebooting..."sleep 2;sudo systemctl poweroff'
